<?xml version="1.0"?>
<odoo>
    <record id="device_type_action" model="ir.actions.act_window">
        <field name="name">Devices types</field>
        <field name="res_model">workshop.reparation.device.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="device_type_view_form" model="ir.ui.view">
        <field name="name">device.type.view.form</field>
        <field name="model">workshop.reparation.device.type</field>
        <field name="arch" type="xml">
            <form string="record">
                <sheet>
                    <div class="oe_title">
                        <h1 class="oe_title">
                            <field name="name" string="Name: "/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

</odoo>