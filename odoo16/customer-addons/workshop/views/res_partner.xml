<?xml version="1.0"?>
<odoo>
    <record id="workshop_clients_action" model="ir.actions.act_window">
        <field name="name">Clients</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_workshop': True, 'from_workshop_module': True}</field>
        <field name="domain">[('workshop_client', '=', True)]</field>
    </record>

    <record id="workshop_clients_user_view" model="ir.ui.view">
        <field name="name">workshop.clients.user.view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">

            <xpath expr="//notebook/page[1]" position="attributes">
                <attribute name="invisible">context.get('from_workshop_module', False)</attribute>
            </xpath>
            <xpath expr="//notebook/page[2]" position="attributes">
                <attribute name="invisible">context.get('from_workshop_module', False)</attribute>
            </xpath>
            <xpath expr="//notebook/page[3]" position="attributes">
                <attribute name="invisible">context.get('from_workshop_module', False)</attribute>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string="Workshop">
                    <field name="workshop_client" string="Workshop client"/>
                </page>
            </xpath>

            <field name="vat" position="attributes">
                <attribute name="invisible">context.get('from_workshop_module', False)</attribute>
            </field>
            <field name="website" position="attributes">
                <attribute name="invisible">context.get('from_workshop_module', False)</attribute>
            </field>
            <field name="category_id" position="attributes">
                <attribute name="invisible">context.get('from_workshop_module', False)</attribute>
            </field>
            <field name="comment" position="attributes">
                <attribute name="invisible">context.get('from_workshop_module', False)</attribute>
            </field>

            <field name="active" position="attributes">
                <attribute name="invisible">context.get('from_workshop_module', False)</attribute>
            </field>
            <field name="title" position="attributes">
                <attribute name="invisible">context.get('from_workshop_module', False)</attribute>
            </field>
            <field name="function" position="attributes">
                <attribute name="invisible">context.get('from_workshop_module', False)</attribute>
            </field>

            <field name="name" position="attributes">
                <attribute name="required">context.get('from_workshop_module', False)</attribute>
            </field>
            <field name="phone" position="attributes">
                <attribute name="required">context.get('from_workshop_module', False)</attribute>
            </field>
            <field name="email" position="attributes">
                <attribute name="required">context.get('from_workshop_module', False)</attribute>
            </field>
        </field>
    </record>

</odoo>
