        <field name="name">Reparation Tag</field>
        <field name="res_model">workshop.reparation.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="reparation_tag_view_form" model="ir.ui.view">
        <field name="name">workshop.tag.view.form</field>
        <field name="model">workshop.reparation.tag</field>
        <field name="arch" type="xml">
            <form string="record">
                <sheet>
                    <div class="oe_title">
                        <h1 class="oe_title">
                            <field name="name" string="Name: "/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

</odoo>