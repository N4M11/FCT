<?xml version="1.0"?>
<odoo>
    <record id="estate_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_available':True}</field>
    </record>

    <!--GENERAL TREE-->
    <record id="estate_view_tree" model="ir.ui.view">
        <field name="name">estate.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="record" decoration-success="(status == 'received') or (status == 'accepted')"
                  decoration-bf="(status == 'accepted')" decoration-muted="(status == 'sold')">
                <field name="status" invisible="1"/>
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="property_tag_id" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>

            </tree>
        </field>
    </record>
    <!--OFFER TREE-->
    <record id="estate_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.offer.view.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="record" editable="bottom"
                  decoration-success="status=='accepted'"
                  decoration-danger="status=='refused'">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_accepted" string="Accepted" type="object" icon="fa-check"
                        attrs="{'invisible': [('status', '!=', False)]}"/>

                <button name="action_refused" string="Refused" type="object" icon="fa-times"
                        attrs="{'invisible': [('status', '!=', False)]}"/>

                <field name="status" invisible="1"/>


            </tree>
        </field>
    </record>


    <!--GENERAL FORM-->
    <record id="estate_view_form" model="ir.ui.view">
        <field name="name">estate.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property" create="1" delete="1" write="1" edit="1">
                <sheet>
                    <header>
                        <button name="action_sold" type="object" string="Sold"
                                attrs="{'invisible':[('status', 'in', ('sold','canceled'))]}"/>
                        <button name="action_cancel" type="object" string="Cancel"
                                attrs="{'invisible':[('status', 'in', ('canceled','sold'))]}"/>
                        <field name="status" string="" widget="statusbar"/>
                    </header>
                    <div class="oe_title">
                        <h1 class="oe_title">
                            <field name="name"/>
                        </h1>
                        <field name="property_tag_id" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    </div>

                    <group>
                        <group>
                            <field name="property_type_id" options="{'no_create':True}"/>
                            <field name="postcode"/>
                            <field name="date_availability">
                                <attribute name="required">0</attribute>
                            </field>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_offer"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                                <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                                <field name="total_area"/>
                            </group>
                        </page>

                        <page string="Offers">

                            <field name="offer_ids"
                                   attrs="{'readonly': [('status', 'in', ('accepted','canceled','sold'))]}"
                                   nolabel="1"/>
                        </page>

                        <page string="Other info">
                            <group>
                                <field name="salesperson"/>
                                <field name="buyer"/>
                            </group>
                        </page>

                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <!--SEARCHER-FILTERS-->
    <record id="estate_view_search" model="ir.ui.view">
        <field name="name">estate.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Properties">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area','>=',self)]"/>
                <field name="facades"/>
                <filter string="Available" name="available" domain="['|',
                ('status','=','new'),
                ('status','=','received')]"/>
                <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>

            </search>

        </field>
    </record>

    <!--PROPERTY_TYPE VIEW-->
    <record id="estate_type_view_form" model="ir.ui.view">
        <field name="name">estate.property.type.view.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form>

                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                        <div class="oe_stat_button">
                            <button name="action_open_offers"
                                    string="Offers"
                                    type="object"
                                    icon="fa-money"
                                    class="oe_stat_button">

                                <field name="property_offer_count"
                                       string="Offers"
                                       widget="statinfo"/>

                            </button>

                        </div>

                    </div>

                    <notebook>
                        <page string="Properties">
                            <field name="property_ids" attrs="{'readonly': True}">
                                <tree>

                                    <field name="name"/>
                                    <field name="expected_price"/>
                                    <field name="status"/>
                                </tree>

                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!--KANBAN VIEW-->
    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.view.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="name"/>
                <field name="status"/>
                <field name="selling_price"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="row">
                                <div class="col-12">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <div>
                                    Expected Price:
                                    <field name="expected_price"/>
                                </div>
                                <t t-if="record.status.raw_value == 'received'">
                                    <div>
                                        Best Offer:
                                        <field name="best_offer"/>
                                    </div>
                                </t>

                                <t t-if="record.status.raw_value == 'accepted'">
                                    <div>
                                        Selling Price:
                                        <field name="selling_price"/>
                                    </div>
                                </t>

                            </div>

                            <field name="property_tag_id" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>